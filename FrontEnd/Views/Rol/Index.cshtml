@model IEnumerable<FrontEnd.Models.RolViewModel>

@{
    ViewData["Title"] = "Lista de Roles";
}

<h1>Lista de Roles</h1>

<p>
    <a asp-action="Create">Registrar nuevo rol +</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdRol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreRol)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.IdRol  }) |
                    @Html.ActionLink("Detalle", "Details", new {  id=item.IdRol  }) |
                    @Html.ActionLink("Eliminar", "Delete", new {  id=item.IdRol  })
                </td>
            </tr>
        }
    </tbody>
</table>
