@model FrontEnd.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Eliminar usuario";
}

<h1>Eliminar usuario</h1>

<h3>¿Está seguro de eliminar este usuario?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdUsuario)
        </dd>
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            Cédula
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">
            Correo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            Número de tarjeta
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroTarjeta)
        </dd>
        <dt class="col-sm-2">
            CVV
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cvv)
        </dd>
        <dt class="col-sm-2">
            Fecha de expiración
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaExpiracion)
        </dd>
        <dt class="col-sm-2">
            Nombre del titular
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreTitular)
        </dd>
        <dt class="col-sm-2">
            Rol
        </dt>
        <dd class = "col-sm-2">
            @Html.DropDownListFor(model => model.IdRol, new SelectList(Model.rols, "IdRol", "NombreRol"), new { @class = "form-control" })
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @Html.HiddenFor(Model=>Model.IdUsuario)
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
